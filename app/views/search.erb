<section class="sform spage">
  <form action="/movies/search" method="get">
  <input type="text" name="search" placeholder="enter a movie title">
  <button type="submit" value="search"><i class="fas fa-search"></i></button>
</form>

<div class="sresults">
  <form action="/movies/show" method="post" class="result-cards">

    <%@movie_list.each_with_index do |movie,i|%>
      <input type="radio" name="imdbID[<%=movie['imdbID']%>]" id="movie<%=i%>">

      <%if movie['Poster'] != "N/A"%>
        <label for="movie<%=i%>"><img src="<%=movie['Poster']%>" alt="<%=movie['Title']%> (<%=movie['Year']%>)"></label>
      <%else%>
        <label for="movie<%=i%>"><img src="https://cdn.bestmoviehd.net/share/images/no-cover.png" alt="" title="<%=movie['Title']%> (<%=movie['Year']%>)"></label>
      <%end%>

    <%end%>

    <br>
    <%if !@movie_list.empty?%>
      <input type="submit" value="review movie">
    <%end%>
  </form>
</div>
</section>
