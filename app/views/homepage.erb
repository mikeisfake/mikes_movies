<section class="homepage animated fadeInDown">

  <div class="action-buttons all-home animated fadeIn">

    <a href="/movies">
      <i class="fas fa-th-large"></i>
    </a>
    <a href="/logout" class="logout">
      <i class="fas fa-sign-out-alt"></i>
      logout.</a>

      <form class="logout" method="post" action="/user/delete">
        <input type="hidden" name="_method" value="delete">
        <button type="delete" value="delete account">
          <i class="fas fa-trash"></i>
        </button>
      </form>
  </div>

  <nav class="main-nav">

    <div class="nav-header">
      <h1>
        <i class="material-icons user">face</i><%=@quotes.sample%>.</h1>
      <div class="action-buttons h-page-buttons">
        <div class="sform">
          <form action="/movies/search" method="get">
            <input type="text" name="search" placeholder="enter a movie title">
            <button type="submit" value="search">
              <i class="fas fa-search"></i>
            </button>
          </form>
        </div>
      </div>
    </div>

  </nav>

  <%if !current_user.movies.empty?%>
    <div class="movies-container animated fadeIn delay-1s">
      <h2>recently watched.</h2>
      <%@movies.reverse.first(5).each do |movie|%>
        <a href="/movies/<%=movie.id%>" class="movie-card" name="<%=movie.title%> (<%=movie.release_date%>)"><img src="<%=movie.poster%>" alt="movie poster"></a>
      <%end%>
    </div>

    <ul class="review-container animated fadeIn delay-1s">
      <h2>random reviews.</h2>
      <%@movies.sample(6).each do |movie|%>
        <a href="/movies/<%=movie.id%>" class="review-card">
          <li>
            <img src="<%=movie.poster%>" alt="">
            <span>
              <h3>
                <%=movie.title%></h3><%=movie.review%></span>
          </li>
        </a>
      <%end%>
    </ul>

  <%end%>

  <br>
</section>
