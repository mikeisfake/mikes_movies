<section class="homepage">

  <h1><i class="fas fa-user"></i> welcome <%=current_user.username%>.</h1>
  <div class="action-buttons h-page-buttons">
    <div class="sform">
    <form action="/movies/search" method="get">
    <input type="text" name="search" placeholder="enter a movie title">
    <button type="submit" value="search"><i class="fas fa-search"></i></button>
  </form>
  <a href="/logout">logout</a>
  </div>
  </div>


<%if !current_user.movies.empty?%>
  <div class="movies-container">
    <h2>recently watched.</h2>
    <%@movies.reverse.first(5).each do |movie|%>
      <a href="/movies/<%=movie.id%>" class="movie-card"><img src="<%=movie.poster%>" alt="movie poster"></a>
    <%end%>
    <p><a href="/all">see all movies.</a></p>
  </div>

  <ul class="review-container">
    <h2>recent reviews.</h2>
  <%@movies.reverse.first(5).each do |movie|%>
    <a href="/movies/<%=movie.id%>" class="review-card">
      <li >
      <img src="<%=movie.poster%>" alt="">
      <span><%=movie.review%></span>
    </li></a>
  <%end%>
  </ul>

<%end%>


<br>
</section>
